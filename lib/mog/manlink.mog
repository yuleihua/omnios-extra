# Symlink man pages
<transform file link hardlink path=$(PREFIX)/share/man/(man\d[^/]*)/(.*) \
    -> emit \
    link path=$(OPREFIX)/share/man/%<1>/%<2> \
    target=../../../$(PKGROOT)/share/man/%<1>/%<2> >

